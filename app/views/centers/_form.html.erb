<%= form_with(model: center) do |form| %>
  <% if center.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(center.errors.count, "error(es)") %> prohibieron que el centro se guardara:</h2>
      
      <ul>
        <% center.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--Se agrega campo para asignarle manualmente el ID a cada registro-->
<div class="container form-control bg-card-personal">
  <div class="col align-self-center">
    <%= form.label "Identificador del centro de costo", :class=>"form-label", style: "display: block" %>
    <%= form.text_field :id, class: "form-control border border-info rounded-2" %>
  <div class="mb-3">
    <%= form.label "Nombre del centro de costo", :class=>"form-label", style: "display: block" %>
    <%= form.text_field :name, class: "form-control border border-info rounded-2" %>
  </div>
  <div class="mb-3">
      <label class="control-label">Seleccione una Zona: </label>
      <div class= "input-group mb-3 justify-content-center">
        <%= form.select :zone_id, options_from_collection_for_select(Zone.all, :id, :description),{}, {class: "form-control"} %>
      </div>
  </div>

  <div>
    <i class= "separar d-flex bi">
      <span class="">
        <%= button_tag(:type => 'submit', :title=>'Actualiza los datos', :class => 'bi bi-arrow-counterclockwise text-dark btn') do %>
        <% end %>
          
      </span>
        <%= link_to "", centers_path, :class=>"bi bi-skip-backward-btn-fill text-dark btn", :title=>'Retornar a las zonas' %>
    </i>
  </div>
<% end %>
</div>
</div>