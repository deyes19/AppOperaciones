<%= form_with(model: status) do |form| %>
  
  <% if status.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(status.errors.count, "error") %> NO dejaron guardar el estado del traslado:</h2>

      <ul>
        <% status.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--Se agrega campo para asignarle manualmente el ID a cada registro-->
 <div class="container  bg-card-personal w-75">
  <div class="col align-self-center">
    <%= form.label "Identificador del estado del traslado", :class=>"form-label fw-bolder mt-2", style: "display: block" %>
    <%= form.text_field :id, class: "form-control border border-info rounded-2" %>
  </div>
  <div class="mb-3">
    <%= form.label "Nombre del estado del traslado", :class=>"form-label fw-bolder mt-2", style: "display: block" %>
    <%= form.text_field :description, class: "form-control border border-info rounded-2" %>
  </div> 

  <div>
    <i class= "separar d-flex bi">
      <span class="">
        <%= button_tag(:type => 'submit', :title=>'Actualiza los datos', :class => 'bi bi-arrow-counterclockwise text-dark btn') do %>
          <i class="icon-up-arrow icon-white"></i>
        <% end %>
          
      </span> 
        <%= link_to "", statuses_path, :class=>"bi bi-skip-backward-btn-fill text-dark btn", :title=>'Retornar a los estados de traslado disponibles' %>
    </i>
  </div>
<% end %>
