<% if flash[:notice] %>
    <div class="alert alert-success" role="alert" id="notice" class="notice">
        <%= flash[:notice] %>                                    
    </div>
<% end %>

<!--Se agrega personalizacion con boostrap para visualizacion de las vistas de zonas -->
<div class="container">
  <!-- Stack the columns on mobile by making one full-width and the other half-width -->
  <nav class="navbar navsep navbar-expand-sm navbar-rednav bg-rednav rounded">
    <div class="container-fluid">
      <div class="navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
          <i>
            <%= link_to " Nuevo estado del traslado",new_status_path, :class=>"nav-item nav-link bi bi-plus-square-dotted" %>
          </i>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  
  <div class="row">
      <div class="col-md-8">
        <div class="tzona">
            <h3>ESTADOS DEL TRASLADO</h3>
        </div>
            <table class="table  table-striped table-hover ">
                  <tr class="text-dark">
                    <th>CÓDIGO</th>
                    <th>NOMBRE</th>
                    <th>ACCIONES</th>
                  </tr>
                      <div id="statuses">
                        <% @statuses.each do |status| %>
                          <tr>
                            <td>
                              <%= status.id%>
                            </td>
                            <td>
                              <%= status.description %>
                            </td>
                            <td>
                              <i class="separar">
                              <%= button_to "", status, method: :delete, :class=>"bi bi-trash  text-dark btn", :data=>{turbo_confirm:'Estás seguro?'}%>
                              <%= link_to "", edit_status_path(status), :title=>"Editar", :class=>" bi bi-pencil-fill  text-dark btn" %>
                              </i>
                            </td> 
                          </tr>
                        <% end %>
                      </div>
            </table> 
      </div>
  </div>
</div>