<%= form_with(model: ubication) do |form| %>
  <% if ubication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(ubication.errors.count, "error") %> prohibited this ubication from being saved:</h2>

      <ul>
        <% ubication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--Se agrega campo para asignarle manualmente el ID a cada registro-->
<div class="container form-control bg-card-personal">
  <div class="col align-self-center">
    <%= form.label "Id de ubicación", :class=>"form-label", style: "display: block" %>
    <%= form.text_field :id, :class=>"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label "Nombre ubicación", :class=>"form-label", style: "display: block" %>
    <%= form.text_field :name, :class=>"form-control" %>
  </div>

  <div>
    <i class= "separar d-flex bi">
      <span class="">
        <%= button_tag(:type => 'submit', :title=>'Actualiza los datos', :class => 'bi bi-arrow-counterclockwise btn') do %>
          <i class="icon-up-arrow icon-white"></i>
        <% end %>
          
      </span>
        <%= link_to "", ubications_path, :class=>"bi bi-skip-backward-btn-fill btn", :title=>'Retornar a ubicaciones' %>
    </i>
  </div>
<% end %>

