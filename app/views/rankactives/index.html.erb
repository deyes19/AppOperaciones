<% if flash[:notice] %>
    <div class="alert alert-success" role="alert" id="notice" class="notice">
        <%= flash[:notice] %>                                    
    </div>
<% end %>

<!--Se agrega personalizacion con boostrap para visualizacion de las vistas de zonas -->
<div class="container">
  <!-- Stack the columns on mobile by making one full-width and the other half-width -->



  <nav class="navbar navsep navbar-expand-sm navbar-rednav bg-rednav rounded">
    <div class="container-fluid">
      <div class="navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
          <i>
           <% if can? :create, Rankactive %>
            <%= link_to " Nueva Jerarquia", new_rankactive_path, :class=>"nav-item nav-link bi bi-plus-square-dotted" %>
          <% end %>
          </i>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  
  <div class="row">
      <div class="col-md-8">
        <div class="tzona">
            <h3>JERARQUIA</h3>
        </div>
            <table class="table  table-striped table-hover">
                  <tr class="text-dark">
                    <th>ID</th>
                    <th>NOMBRE DE JERARQUIA</th>
                    <th>ACCIONES</th>
                  </tr>
                      <div id="rankactives">
                        <% @rankactives.each do |rankactive| %>
                          <tr>
                            <td>
                              <%= rankactive.id %>
                            </td>
                            <td>
                              <%= rankactive.name%>
                            </td>
                            <td>
                              <i class="separar">
                              
                                <%= link_to "", rankactive, :class=>"bi bi-eye-fill text-dark btn" %>
                                <% if can? :destroy, Active %>
                                <%= button_to "", rankactive, method: :delete, :class=>"bi bi-trash text-dark btn", :data=>{turbo_confirm:'EstÃ¡s seguro?'}%>
                                <% end %>
                                <% if can? :edit, Active %>
                                <%= link_to "", edit_rankactive_path(rankactive), :title=>"Editar", :class=>" bi bi-pencil-fill text-dark btn" %>
                                <% end %>
                              </i>
                            </td> 
                          </tr>
                        <% end %>
                      </div>
            </table> 
      </div>
  </div>
</div>
</div>